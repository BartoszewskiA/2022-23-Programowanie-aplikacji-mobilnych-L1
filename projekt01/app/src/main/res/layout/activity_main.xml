<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="20px">

  <TextView
      android:id="@+id/textVie01"
      android:text="x:"
      android:textSize="40sp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      />
    <EditText
        android:id="@+id/editText01"
        android:textSize="40sp"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        app:layout_constraintLeft_toRightOf="@id/textVie01"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/textVie01"/>

  <TextView
      android:id="@+id/textVie02"
      android:text="y:"
      android:textSize="40sp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/textVie01"
      app:layout_constraintLeft_toLeftOf="parent"
      />
  <EditText
      android:id="@+id/editText02"
      android:textSize="40sp"
      android:layout_height="wrap_content"
      android:layout_width="0dp"
      app:layout_constraintLeft_toRightOf="@id/textVie01"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintBaseline_toBaselineOf="@id/textVie02"/>

  <Button
      android:id="@+id/button02"
      android:text="Kasuj"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"/>

<Button
    android:id="@+id/button01"
    android:text="Licz"
    android:textSize="40sp"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toTopOf="@id/button02"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    />
</androidx.constraintlayout.widget.ConstraintLayout>